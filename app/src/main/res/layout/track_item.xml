<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/recycler_track_margin">

    <ImageView
        android:id="@+id/image_track"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_song"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/track_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        tools:text="Song name - 1.29 USD"
        android:layout_marginStart="@dimen/recycler_track_image_margin"
        app:layout_constraintStart_toEndOf="@+id/image_track"
        app:layout_constraintTop_toTopOf="@+id/image_track"
        app:layout_constraintBottom_toBottomOf="@+id/image_track" />

</androidx.constraintlayout.widget.ConstraintLayout>